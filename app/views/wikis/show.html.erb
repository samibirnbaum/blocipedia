<h1 align="center">Wiki</h1>

<div class="container container-mine">
    <p class="label label-mine">Title</p>
    <div class="form-control form-control-lg form-control-mine-title">
        <%=@wiki.title%>
    </div>

    <p class="label label-mine">Body</p>
    <div class="form-control form-control-mine">
            <%= @wiki.body %>
    </div>

    <br>
    <div class="text-center">
        <%= link_to  "Edit Wiki", edit_wiki_path(@wiki.id), class: "btn btn-success btn-lg" %>
        <%= link_to  "Delete Wiki", "/wikis/#{@wiki.id}", method: :delete, class: "btn btn-danger btn-lg" %>
    </div>
</div>
